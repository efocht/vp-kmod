# Define the kmod package name here.
%define kmod_name vp

# Set install prefix to /usr/local
%define	_prefix	@prefix@

# If kversion isn't defined on the rpmbuild line, define it here.
%{!?kversion: %define kversion %(uname -r)}
%define krelease %(uname -r | sed s/\.`arch`//)

Name:		@PACKAGE@
Version:	@VERSION@
Release:	@RELEASE@%{?dist}
Group:		System Environment/Kernel
License:	GPLv2
Source0:        @PACKAGE@-@VERSION@.tar.gz
Summary:	%{kmod_name} kernel module
Vendor:		NEC Corporation
Packager:	NEC Corporation
BuildRequires:	kernel-headers = %{krelease}
Requires:	kernel = %{krelease}

%description
VE Virtual to Physical kernel modules.

%package	devel
Summary:	Headers for building apps that use vp module
Group:		System Environment/Kernel
Requires:	%{name} = %{version}-%{release}

%description	devel
This package contains header required to build applications that
use vp module

%prep
%setup -q

%build
%configure --with-release-id=@RELEASE@
make %{?_smp_mflags}

%install
%{__rm} -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT

%clean
%{__rm} -rf $RPM_BUILD_ROOT

%pre
/sbin/depmod -a
if modinfo ve_drv > /dev/null 2>&1;
then
	/sbin/modprobe -r ve_drv
fi
if modinfo vp > /dev/null 2>&1;
then
	/sbin/modprobe -r vp
fi

%preun
case "$1" in
	0)
	# uninstall
	/sbin/depmod -a
	if modinfo ve_drv > /dev/null 2>&1;
	then
		/sbin/modprobe -r ve_drv
	fi
	if modinfo vp > /dev/null 2>&1;
	then
		/sbin/modprobe -r vp
	fi
	;;
	1)
	# upgrade
	# do nothing
	;;
esac

%post
/sbin/depmod -a
case "$1" in
	1)
	# install
	if ! /sbin/modprobe vp
	then
	    # We can't abort/rollback RPM transaction when we reach here
	    # This is just for warning
	    exit 1
	fi
	if modinfo ve_drv > /dev/null 2>&1;
	then
	    if ! /sbin/modprobe ve_drv
	    then
		# We can't abort/rollback RPM transaction when we reach here
		# This is just for warning
		exit 1
	    fi
	fi
	;;
	2)
	# upgrade
	# do nothing
	;;
esac

%files
%defattr(-,root,root,-)
/lib/modules/%{kversion}/extra/*.ko
%{_sysconfdir}/modprobe.d/*.conf
%config(noreplace) %{_sysconfdir}/dracut.conf.d/*

%files devel
%defattr(-,root,root,-)
%{_prefix}/src/ve_kernel/Module.symvers
%{_includedir}/*.h

%changelog
